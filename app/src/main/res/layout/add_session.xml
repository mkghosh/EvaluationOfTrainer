<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="5sp"
            android:background="#55000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:background="#50DEB887"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:id="@+id/tvDate"
                    android:textSize="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DATE" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Course : "
                        android:textSize="30sp"/>
                    <Spinner
                        android:layout_weight="1"
                        android:id="@+id/sp_session"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    </Spinner>
                </LinearLayout>
                <View
                    android:background="#C8A7A7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></View>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Group : "
                        android:textSize="30sp"/>
                    <Spinner
                        android:layout_weight="1"
                        android:id="@+id/sp_group"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    </Spinner>
                </LinearLayout>
                <View
                    android:background="#C8A7A7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Track : "
                        android:textSize="30sp"/>
                    <Spinner
                        android:id="@+id/sp_track"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    </Spinner>

                </LinearLayout>

                <View
                    android:background="#C8A7A7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Trainer : "
                        android:textSize="30sp"/>
                    <Spinner
                        android:id="@+id/sp_trainer"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    </Spinner>

                </LinearLayout>

                <EditText
                    android:id="@+id/session_comment"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Remarks"/>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/submit_session"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="ADD"
                        android:onClick="add"/>
                    <Button
                        android:id="@+id/edit_session"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="EDIT"
                        android:onClick="edit"/>

                    <Button
                        android:id="@+id/delete_session"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="DELETE"
                        android:onClick="delete"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/evaluation_button_back"
                        android:text="BACK"
                        android:layout_width="0dp"
                        android:layout_weight=".3"
                        android:layout_height="wrap_content"
                        android:onClick="goBack"/>
                    <Button
                        android:id="@+id/evaluation_button_home"
                        android:text="HOME"
                        android:layout_width="0dp"
                        android:layout_weight=".3"
                        android:layout_height="wrap_content"
                        android:onClick="goHome"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
